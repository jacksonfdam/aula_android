    <permission
        android:name="br.com.jacksonfdam.targettrust.blog.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="br.com.jacksonfdam.targettrust.blog.permission.MAPS_RECEIVE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
